<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="#f9f2ef"
    tools:context=".Survey.ThirdSurveyActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/third_back"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#0b62f5"
                android:text="Back"
                android:textSize="16sp" />

            <Button
                android:id="@+id/third_skip"
                android:layout_width="87dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#0b62f5"
                android:text="Skip"
                android:textSize="16sp" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ProgressBar
                android:id="@+id/progress_bar"
                style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:progressDrawable="@drawable/rounded_progress"
                android:max="100"
                android:progress="100" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3/3"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:paddingStart="8dp" />

        </LinearLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What Purposes Are Your Going to Learn Daily?"
            android:fontFamily="sans-serif"
            android:textSize="22dp"
            android:textStyle="bold"
            />

        <!-- Your LinearLayouts with Buttons and ImageViews go here -->

        <!-- Example of one of the LinearLayouts -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/five_mins"
                android:layout_gravity="center_vertical"
                android:contentDescription="Email Icon" />

            <Button
                android:id="@+id/five_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="5 minutes / day \t"
                android:textSize="26dp"
                android:textColor="@color/black"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/fifteen_mins"
                android:layout_gravity="center_vertical"
                android:contentDescription="Email Icon" />

            <Button
                android:id="@+id/fifteen_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="15 minutes / day"
                android:textSize="26dp"
                android:textColor="@color/black"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/twentyfive_mins"
                android:layout_gravity="center_vertical"
                android:contentDescription="Email Icon" />

            <Button
                android:id="@+id/twentyfive_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="25 minutes / day"
                android:textSize="26dp"
                android:textColor="@color/black"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:src="@drawable/thirtyfive_mins"
                android:layout_gravity="center_vertical"
                android:contentDescription="Email Icon" />

            <Button
                android:id="@+id/thirtyfive_mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="35 minutes / day"
                android:textSize="26dp"
                android:textColor="@color/black"
                android:background="@android:color/transparent" />
        </LinearLayout>


        <ImageView
            android:layout_marginTop="13dp"
            android:id="@+id/thirdSurvey_next"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:src="@drawable/next_button"/>

    </LinearLayout>

</ScrollView>
