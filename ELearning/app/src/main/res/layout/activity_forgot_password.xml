<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f9f2ef"
    tools:context=".Login.ForgotPasswordActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/backButton_forgotpassword"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:backgroundTint="#0b62f5"
            android:textSize="16dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="430dp"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:text="Enter your email address to \nReset Your Password!"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/input_background"
        android:padding="20dp"
        android:layout_marginBottom="50dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/email"
            android:layout_gravity="center_vertical"
            android:contentDescription="Email Icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Via Email"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingStart="10dp"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/et_via_email"
            android:layout_width="197dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:fontFamily="sans-serif"
            android:hint="abc.xyz123@gmail.com"
            android:inputType="textEmailAddress"
            android:paddingStart="15dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/email_ticks"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_green_tick"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:contentDescription="Valid Email Tick" />

    </LinearLayout>

    <ImageView
        android:id="@+id/forgot_password_continue_button"
        android:layout_width="277dp"
        android:layout_height="84dp"
        android:layout_gravity="center"
        android:background="@drawable/continue_button" />


</LinearLayout>