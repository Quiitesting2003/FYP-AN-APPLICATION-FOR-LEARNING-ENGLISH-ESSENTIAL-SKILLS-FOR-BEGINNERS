<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Viet.SignUpVnActivity"
    android:background="#f9f2ef">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="190dp"
        android:layout_gravity="center"
        android:background="@drawable/rounded_logo"
        android:clipToOutline="true"
        android:padding="1dp"
        android:scaleType="centerCrop"
        android:src="@drawable/congratulation_pic"
        android:layout_marginBottom="10dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="left"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bắt Đầu Nào.!"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tạo Tài Khoản"
            android:textSize="18dp"/>

    </LinearLayout>

    <!-- Email Input Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_background"
        android:padding="15dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/email"
            android:layout_gravity="center_vertical"
            android:contentDescription="Email Icon" />

        <EditText
            android:id="@+id/et_email_signUpVN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Email"
            android:background="@android:color/transparent"
            android:paddingStart="10dp"
            android:inputType="textEmailAddress"/>

        <ImageView
            android:id="@+id/iv_email_tick"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_green_tick"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:contentDescription="Valid Email Tick" />
    </LinearLayout>

    <!-- Password Input Layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/button_background"
        android:padding="15dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/lock"
            android:layout_gravity="center_vertical"
            android:contentDescription="Password Icon" />

        <EditText
            android:id="@+id/et_password_signUpVN"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Mật khẩu"
            android:background="@android:color/transparent"
            android:paddingStart="10dp"
            android:inputType="textPassword"/>

        <ImageView
            android:id="@+id/iv_toggle_password"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/visibilityoff"
            android:layout_gravity="center_vertical"
            android:contentDescription="Toggle Password Visibility" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/checkbox_signUpVN"
            android:layout_width="wrap_content"
            android:layout_height="45dp"/>

        <TextView
            android:id="@+id/tv_agree_vn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:textSize="16sp"
            android:text="Đồng ý với Điều khoản và Điều kiện"
            android:textStyle="bold"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/signUpVN"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/dangky_button" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hoặc"
            android:textStyle="bold"
            android:padding="5dp"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <ImageView
                android:id="@+id/gg_signUpVN"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="40dp"
                android:src="@drawable/gg_lg" />

            <ImageView
                android:id="@+id/apple_signUpVN"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginRight="85dp"
                android:src="@drawable/apple_lg" />

        </LinearLayout>


        <ImageView
            android:id="@+id/not_account_signUpVN"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:src="@drawable/have_account_vn"
            android:layout_marginTop="4dp"/>



    </LinearLayout>


</LinearLayout>
