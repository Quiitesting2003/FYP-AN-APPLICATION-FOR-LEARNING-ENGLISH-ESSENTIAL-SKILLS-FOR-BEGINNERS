<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#80e2fa"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Intro.Intro3Activity">

    <Button
        android:id="@+id/intro3_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:text="Skip"
        android:backgroundTint="#0b62f5"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:src="@drawable/intro3_pic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:gravity="center"
        android:layout_marginTop="-150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We believe.! "
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="87dp"
            android:layout_marginBottom="00dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="Simple, Useful, and Reality"
            android:textSize="23dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/intro3_next"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:src="@drawable/next_button"
        android:layout_marginTop="-200dp" />

</LinearLayout>