<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f9f2ef"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage.AboutUpdateInfoActivity">

    <Button
        android:id="@+id/update_back"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="25dp"
        android:backgroundTint="#0b62f5"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/update_avt"
            android:layout_width="139dp"
            android:layout_height="126dp"
            android:layout_gravity="center"
            android:layout_marginBottom="45dp"
            android:src="@drawable/people_icon" />

        <!-- Full Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:layout_marginBottom="23dp">

            <EditText
                android:id="@+id/update_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Full Name"
                android:background="@android:color/transparent"
                android:paddingStart="10dp"
                android:inputType="textPersonName" />
        </LinearLayout>


        <!-- Date of Birth -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:layout_marginBottom="23dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dob_icon"
                android:layout_gravity="center_vertical"
                android:contentDescription="Calendar Icon" />

            <EditText
                android:id="@+id/update_dob"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Date of Birth"
                android:background="@android:color/transparent"
                android:paddingStart="10dp"
                android:focusable="false"
                android:inputType="date" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:layout_marginBottom="23dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/email"
                android:layout_gravity="center_vertical"
                android:contentDescription="Email Icon" />

            <EditText
                android:id="@+id/update_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Email"
                android:background="@android:color/transparent"
                android:paddingStart="10dp"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <!-- Phone Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="16dp"
            android:layout_marginBottom="23dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/usa_flag"
                android:layout_gravity="center_vertical"
                android:contentDescription="Country Code Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="( +1 )"
                android:paddingStart="10dp" />

            <EditText
                android:id="@+id/update_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="724-848-1225"
                android:background="@android:color/transparent"
                android:paddingStart="10dp"
                android:inputType="phone" />
        </LinearLayout>

        <!-- Gender -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/input_background"
            android:padding="20dp"
            android:layout_marginBottom="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Gender: "
                android:paddingStart="10dp"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/update_gendere"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/dropdown_icon"
                android:layout_gravity="center_vertical"
                android:contentDescription="Dropdown Icon" />
        </LinearLayout>

        <Button
            android:id="@+id/update_save"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="Save"
            android:layout_marginTop="25dp"
            android:backgroundTint="#0b62f5"
            android:textSize="16dp"/>


    </LinearLayout>

</LinearLayout>



