<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".DBoard.IntroGrammarActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is.?"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <!-- Khung trắng với chữ "Thì Hiện Tại" -->
    <LinearLayout
        android:id="@+id/linearLayout"
        android:orientation="horizontal"
        android:background="@drawable/rounded_logo"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <!-- TextView chứa chữ "Thì Hiện Tại" -->
        <TextView
            android:id="@+id/one"
            android:text="Simple Present"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <!-- Dấu mũi tên xuống -->
        <ImageView
            android:id="@+id/arrowGm_one"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="8dp"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/rounded_logo"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <!-- TextView chứa chữ "Thì Hiện Tại" -->
        <TextView
            android:id="@+id/two"
            android:text="Simple Present Progress"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <!-- Dấu mũi tên xuống -->
        <ImageView
            android:id="@+id/arrowGm_two"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="8dp"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/rounded_logo"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <!-- TextView chứa chữ "Thì Hiện Tại" -->
        <TextView
            android:text="Simple Present Perfect"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <!-- Dấu mũi tên xuống -->
        <ImageView
            android:id="@+id/arrowGm_three"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="8dp"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/rounded_logo"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <!-- TextView chứa chữ "Thì Hiện Tại" -->
        <TextView
            android:id="@+id/three"
            android:text="Simple Present Perfect Progressive"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <!-- Dấu mũi tên xuống -->
        <ImageView
            android:id="@+id/arrowDown_three"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="8dp"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>
    <!-- TextView sẽ hiện ra khi nhấn vào dấu mũi tên -->
    <TextView
        android:id="@+id/txtDetail"
        android:text="Chi tiết về thì hiện tại..."
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:padding="10dp"
        android:background="#f0f0f0" />



</LinearLayout>