<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#67e9ff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Intro.Intro2Activity">

    <Button
        android:id="@+id/intro2_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="right"
        android:text="Skip"
        android:backgroundTint="#0b62f5"
        android:textSize="15dp" />

    <ImageView
        android:layout_width="500dp"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:src="@drawable/intro2_pic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learn From Anytime, Anywhere"
            android:textSize="25dp"
            android:layout_marginTop="50dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="Magnificent knowledge and Advanced Technique"
            android:textSize="23dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/intro2_next"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginBottom="300dp"
            android:src="@drawable/next_button" />

    </LinearLayout>





</LinearLayout>