<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#f9f2ef"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VietHomePage.AboutVnActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#3485fb">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="139dp"
                    android:layout_height="122dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginEnd="136dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/people_icon" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:gravity="center"
                    android:text="Trang Thông tin"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_home"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/about_profile" />

                <TextView
                    android:id="@+id/about_info"
                    android:layout_width="170dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:paddingStart="30dp"
                    android:text="   Thông tin"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/togglePassword1"
                    android:layout_width="34dp"
                    android:layout_height="23dp"
                    android:layout_gravity="center"
                    android:src="@drawable/next" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_home"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:src="@drawable/settings" />

                <TextView
                    android:id="@+id/about_setting"
                    android:layout_width="167dp"
                    android:layout_height="32dp"
                    android:paddingStart="48dp"
                    android:layout_gravity="center"
                    android:text=" Cài đặt"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="4.5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/next" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_home"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:src="@drawable/about_lock" />

                <TextView
                    android:id="@+id/about_privacy"
                    android:layout_width="167dp"
                    android:layout_height="32dp"
                    android:paddingStart="48dp"
                    android:layout_gravity="center"
                    android:text="  Bảo mật"
                    android:textStyle="bold"
                    android:textSize="20dp" />

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/next" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_home"
                android:orientation="horizontal"
                android:padding="20dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:src="@drawable/help" />

                <TextView
                    android:id="@+id/about_contact"
                    android:layout_width="163dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:paddingStart="48dp"
                    android:text="  Liên hệ"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="34dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/next" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="276dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_home"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/about_logOut"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="77dp"
                    android:text="Đăng xuất"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="420dp"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:layout_marginBottom="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_margin="16dp"
            android:background="@drawable/nav_background"
            android:padding="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/about_home"
                        android:layout_width="37dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        app:srcCompat='@drawable/nav_home_selector' />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="11dp"
                        android:gravity="center"
                        android:text="Nhà"
                        android:textSize="9dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="0.1">

                    <ImageView
                        android:id="@+id/about_dashboard"
                        android:layout_width="28dp"
                        android:layout_height="38dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        app:srcCompat="@drawable/nav_dashboard_selector" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:gravity="center"
                        android:text="Bảng"
                        android:textSize="9dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="37dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.15">

                    <ImageView
                        android:id="@+id/about_fav"
                        android:layout_width="28dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="4.5dp"
                        app:srcCompat="@drawable/nav_fav_selector" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:gravity="center"
                        android:text="Yêu thích"
                        android:textSize="9dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_height="68dp"
                    android:layout_weight="0.25">

                    <ImageView
                        android:id="@+id/about_about"
                        android:layout_width="41dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/nav_about_selector" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="11dp"
                        android:gravity="center"
                        android:text="Hồ sơ"
                        android:textSize="9dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
