<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Past.IntroPastActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is.?"
        android:textSize="30dp"
        android:textStyle="bold"/>

    <!-- Khung trắng với chữ "Thì Hiện Tại" -->
    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/rounded_logo"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <!-- TextView chứa chữ "Thì Hiện Tại" -->
        <TextView
            android:text="Simple Past"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <!-- Dấu mũi tên xuống -->
        <ImageView
            android:id="@+id/arrowPresent_one"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="8dp"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/rounded_logo"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <!-- TextView chứa chữ "Thì Hiện Tại" -->
        <TextView
            android:text="How To Use"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <!-- Dấu mũi tên xuống -->
        <ImageView
            android:id="@+id/arrowPresent_two"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="8dp"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:background="@drawable/rounded_logo"
        android:padding="10dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="2dp">

        <!-- TextView chứa chữ "Thì Hiện Tại" -->
        <TextView
            android:text="Tense Recognition Signs"
            android:textSize="20dp"
            android:fontFamily="sans-serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"/>

        <!-- Dấu mũi tên xuống -->
        <ImageView
            android:id="@+id/arrowPresent_three"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginLeft="8dp"
            android:layout_width="24dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <Button
        android:id="@+id/introPresent_next"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="25dp"
        android:backgroundTint="#0b62f5"
        android:textSize="16dp"/>
</LinearLayout>