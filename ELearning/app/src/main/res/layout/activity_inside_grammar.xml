<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:layout_marginLeft="15dp"

    android:layout_marginRight="15dp"
    android:orientation="vertical"
    tools:context=".DBoard.InsideGrammarActivity">

    <Button
        android:id="@+id/gm_back"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="25dp"
        android:backgroundTint="#0b62f5"
        android:textSize="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/gm_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Question"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/gm_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="0/10"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gm_container"
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            android:text="Option"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            android:text="Option"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            android:text="Option"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="16dp"
            android:layout_marginTop="10dp"
            android:text="Option"
            android:textAllCaps="false" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/gm_share"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:text="Share"
            android:layout_marginTop="25dp"
            android:backgroundTint="#0b62f5"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/gm_next"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_marginLeft="185dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#ff5733"
            android:textSize="16dp"/>

    </LinearLayout>

</LinearLayout>